<% if(locals.messages){ %>
<ul class="message-list">
  <% messages.forEach(message => { %>
  <li class="message">
    <div class="message-info">
      <p><%- message.sent_date.toDateString() %></p>
      <p>
        <% if (user && user.status !== "guest") { %>
          <b><%- message.author %></b>
        <% }else{ %>
          <b>Log in to see author</b>
        <%} %>
      </p>
    </div>
    <p><%- message.text %></p>
    <br />
    <% if (user && user.status === "admin") { %>
    <a href="/message/<%- message.id %>/delete">Delete message</a>
    <% } %>
  </li>
  <% }) %>
</ul>
<% } %>
